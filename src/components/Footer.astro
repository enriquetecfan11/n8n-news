<style>
	footer {
		background: #f9fafb;
		border-top: 1px solid #e5e7eb;
		padding: 3rem 0 2rem;
		width: 100%;
		margin-top: auto;
		color: #6b7280;
		font-size: 0.9rem;
	}

	.container {
		max-width: 1200px; /* Coherente con header */
		margin: 0 auto;
		padding: 0 1rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr 2fr; /* Más espacio para los links */
		gap: 3rem; /* Separación entre logo y links */
		margin-bottom: 2.5rem; /* Separación antes del bottom */
	}

	.footer-info {
		/* Contenedor para logo y tagline */
	}

	.footer-brand {
		display: inline-flex; /* Para alinear imagen y texto */
		align-items: center;
		font-weight: 700; /* Más bold */
		font-size: 1.3rem; /* Tamaño ajustado */
		color: var(--primary-dark); /* Color oscuro */
		text-decoration: none;
		margin-bottom: 0.8rem; /* Espacio bajo el logo/nombre */
	}

	.footer-logo-img {
		height: 30px; /* Tamaño del logo en footer */
		width: auto;
		margin-right: 8px;
		/* Quitar estilos de imagen por defecto */
		box-shadow: none;
		border: none;
		border-radius: 0;
		margin-top: 0;
		margin-bottom: 0;
		display: inline-block; /* Asegurar que es inline */
	}

	.tagline {
		color: var(--text-light);
		font-size: 0.9rem;
		margin-top: 0;
		margin-bottom: 1rem; /* Espacio antes del copyright mobile */
		line-height: 1.6;
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(
			auto-fit,
			minmax(150px, 1fr)
		); /* Columnas adaptables */
		gap: 2rem; /* Espacio entre grupos de links */
	}

	.links-group h5 {
		margin: 0 0 1rem;
		font-size: 1rem; /* Encabezado de grupo más grande */
		font-weight: 600;
		color: var(--text); /* Color de texto principal */
		text-transform: uppercase; /* Mayúsculas */
		letter-spacing: 0.5px;
	}

	.links-group ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.links-group ul li {
		margin-bottom: 0.6rem; /* Espacio entre links */
	}

	.links-group ul li a {
		color: var(--text-light); /* Color secundario para links */
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.2s ease;
	}

	.links-group ul li a:hover {
		color: var(--accent); /* Color de acento en hover */
		text-decoration: underline;
	}

	.footer-bottom {
		padding-top: 2rem;
		border-top: 1px solid #e5e7eb;
		text-align: center;
		background: #ffffff;
		border-radius: 12px 12px 0 0;
		padding: 2rem 1.5rem;
	}

	.footer-bottom p {
		margin: 0 0 0.5rem; /* Espacio entre párrafos del bottom */
		font-size: 0.85rem;
		color: var(
			--text-lighter
		); /* Color más claro para copyright/disclaimer */
		line-height: 1.5;
	}
	.footer-bottom a {
		color: var(--text-lighter);
		text-decoration: none;
	}
	.footer-bottom a:hover {
		color: var(--accent);
		text-decoration: underline;
	}

	.copyright-mobile {
		display: none; /* Ocultar en desktop */
		margin-top: 1.5rem;
		font-size: 0.85rem;
		color: var(--text-lighter);
	}
	.copyright-desktop {
		display: block; /* Mostrar en desktop */
	}
	.disclaimer-text {
		font-style: italic;
		margin-top: 1rem; /* Espacio sobre el disclaimer */
	}

	@media (max-width: 992px) {
		/* Ajustar breakpoint */
		.footer-content {
			grid-template-columns: 1fr; /* Una columna en pantallas medianas */
			gap: 2.5rem;
		}
		.footer-info {
			text-align: center; /* Centrar info del logo */
		}
		.footer-brand {
			justify-content: center; /* Centrar logo y nombre */
		}
		.footer-links {
			grid-template-columns: repeat(
				auto-fit,
				minmax(180px, 1fr)
			); /* Ajustar columnas de links */
			text-align: center; /* Centrar texto de links */
		}
		.links-group h5 {
			margin-bottom: 0.8rem;
		}
	}

	@media (max-width: 768px) {
		.footer-links {
			grid-template-columns: repeat(2, 1fr); /* Dos columnas en móvil */
			gap: 1.5rem 1rem; /* Ajustar gaps */
		}
		.copyright-desktop {
			display: none; /* Ocultar en móvil */
		}
		.copyright-mobile {
			display: block; /* Mostrar en móvil */
		}
		.footer-bottom {
			padding-top: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.footer-links {
			grid-template-columns: 1fr; /* Una columna en pantallas muy pequeñas */
			text-align: left; /* Alinear a la izquierda en una columna */
		}
		.footer-info {
			text-align: left; /* Alinear a la izquierda */
		}
		.footer-brand {
			justify-content: flex-start; /* Alinear a la izquierda */
		}
	}
</style>

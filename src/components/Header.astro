---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
	<div class="container">
		<nav>
			<div class="logo-section">
				<a href="/" class="logo">
					<img
						src="/nundu_logo_sin_margen.svg"
						alt="Nundu Logo"
						class="logo-img"
					/>
					<span class="site-name">{SITE_TITLE}</span>
				</a>
			</div>
			<div class="nav-links">
				<HeaderLink href="/" class="nav-link">Inicio</HeaderLink>
				<HeaderLink href="/about" class="nav-link"
					>Sobre Nosotros</HeaderLink
				>
			</div>
		</nav>
	</div>
</header>

<style>
	header {
		background-color: var(--background);
		position: sticky;
		top: 0;
		z-index: 100;
		padding: 0.75rem 0.5rem;
		box-shadow: var(--shadow-sm);
		font-family: var(--font-body);
	}

	.container {
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: 70px;
		gap: 1rem;
	}

	.logo-section {
		display: flex;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	.logo-img {
		height: 40px;
		width: auto;
		max-height: 40px;
		margin-right: 12px;
	}

	.site-name {
		font-weight: 700;
		font-size: 1.6rem;
		color: var(--accent);
		letter-spacing: -0.3px;
		white-space: nowrap;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		flex-wrap: wrap;
		justify-content: flex-end;
		color: var(--accent);
	}

	.nav-link {
		color: var(--text);
		font-weight: 600;
		transition: color 0.2s ease;
	}

	.nav-link:hover {
		color: var(--accent);
	}

	@media (max-width: 720px) {
		nav {
			height: auto;
			padding: 1rem 0;
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}

		.nav-links {
			width: 100%;
			gap: 1.2rem;
			justify-content: center;
			text-align: center;
		}
	}
</style>

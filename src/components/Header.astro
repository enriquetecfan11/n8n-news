---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="logo-section">
			<a href="/" class="logo">{SITE_TITLE}</a>
		</div>
		<div class="nav-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<span class="separator">|</span>
			<HeaderLink href="/about">Sobre Nosotros</HeaderLink>
		</div>
	</nav>
</header>

<style>
	header {
		background-color: #ffffff;
		padding: 20px;
		margin-bottom: 10px;
	}

	nav {
		display: flex;
		align-items: center;
		gap: 5px;
		padding: 2px 4px;
		font-size: 13px;
		line-height: 12px;
	}

	.logo-section {
		display: flex;
		align-items: center;
	}

	.logo {
		font-weight: bold;
		color: #000;
		text-decoration: none;
		margin-right: 10px;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 5px;
	}

	.separator {
		color: #000;
		margin: 0 2px;
	}

	@media (max-width: 600px) {
		nav {
			flex-direction: column;
			align-items: flex-start;
			gap: 8px;
			padding: 6px;
		}

		.nav-links {
			width: 100%;
			justify-content: flex-start;
			padding: 2px 0;
		}
	}
</style>

---
// Componente para el panel superior con fecha actual y etiqueta del ticker
const today = new Date();

// Formato personalizado más elegante
const weekdays = [
    "Domingo",
    "Lunes",
    "Martes",
    "Miércoles",
    "Jueves",
    "Viernes",
    "Sábado",
];
const months = [
    "enero",
    "febrero",
    "marzo",
    "abril",
    "mayo",
    "junio",
    "julio",
    "agosto",
    "septiembre",
    "octubre",
    "noviembre",
    "diciembre",
];

const weekday = weekdays[today.getDay()];
const day = today.getDate();
const month = months[today.getMonth()];
const year = today.getFullYear();

// Formato: "Lunes, 21 abril 2025"
const formattedDate = `${weekday}, ${day} ${month} ${year}`;
---

<div class="top-panel">
    <div class="wrapper">
        <div class="top-panel-content">
            <div class="current-date">{formattedDate}</div>
        </div>
    </div>
</div>

<style>
    /* Panel superior con fecha y ticker */
    .top-panel {
        background: var(--primary);
        padding: 0.9rem 0;
        position: sticky;
        top: 0;
        box-shadow: var(--shadow);
        font-family: var(--font-body);
        margin-bottom: auto;
        color: aliceblue;
    }

    .top-panel-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .current-date {
        font-size: 0.95rem;
        font-weight: 600;
        letter-spacing: 0.4px;
        text-shadow: 0 1px 1px rgba(0, 0, 0, 0.25);
        position: relative;
        padding-left: 1rem;
    }

    .current-date::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 4px;
        height: 18px;
        background-color: rgba(255, 255, 255, 0.7);
        border-radius: 2px;
    }

    .ticker-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: 0.3px;
        background-color: rgba(255, 255, 255, 0.15);
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        backdrop-filter: blur(5px);
    }

    .ticker-label .dot {
        width: 8px;
        height: 8px;
        background-color: var(--accent-light);
        border-radius: 50%;
        display: inline-block;
        box-shadow: 0 0 0 rgba(255, 107, 107, 0.4);
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(255, 107, 107, 0.7);
        }
        70% {
            box-shadow: 0 0 0 10px rgba(255, 107, 107, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(255, 107, 107, 0);
        }
    }

    /* No necesitamos redefinir .wrapper ya que está en los estilos globales */
</style>

---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import TradingDashboard from "../components/finance/TradingDashboard.jsx";
---

<!doctype html>
<html lang="es">
    <head>
        <BaseHead
            title={`Vista general de mercados | ${SITE_TITLE}`}
            description={SITE_DESCRIPTION}
        />
        <style>
            .main-content {
                width: 100%;
                max-width: 1400px;
                margin: 0 auto;
                padding: 1em;
            }
            .page-title {
                margin-bottom: 1em;
                text-align: center;
                font-size: 2.2rem;
                font-weight: 700;
                color: var(--primary);
            }
        </style>
        <link rel="stylesheet" href="/src/styles/trading-dashboard.css">
    </head>
    <body>
        <Header />
        <main class="main-content">
            <h1 class="page-title">Mercados en tiempo real</h1>
            <TradingDashboard client:load />
        </main>
        <Footer />
    </body>
</html>
